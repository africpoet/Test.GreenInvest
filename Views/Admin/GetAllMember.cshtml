@model IEnumerable<GreenInvest.Models.PaymentViewModel>

@{
    ViewBag.Title = "All Members Information";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid">     
    <div class="row">
        <div class="col-lg-12">           
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-file"></i> Reports
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> @ViewBag.Title
                </li>
            </ol>
        </div>
    </div>
    <div class="panel">
        <div class="panel-body">

            <p>
                @*@Html.ActionLink("Create New", "Create")*@
            </p>
            <div class="table-responsive ">
                <table class="table table-striped table-hover table-bordered" id="datatable">
                    <thead>
                        <tr>
                            <th>
                                S/No.
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AccountId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Firstname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Othernames)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailAddress)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.BankName)
                                </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.AmountPaid)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PaymentStatus)
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.DatePaid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateRecorded)
                                </th>*@
                            @*<th>Action</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(i++)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Firstname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Othernames)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmailAddress)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.BankName)
                                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.AmountPaid)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaymentStatus)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.DatePaid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateRecorded)
                                    </td>*@
                                @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProfileId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ProfileId }) |

                                    </td>*@
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->